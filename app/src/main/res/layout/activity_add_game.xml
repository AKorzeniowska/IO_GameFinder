<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.main.AddGameActivity">

        <EditText
                android:layout_width="295dp"
                android:layout_height="36dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/gameNameEditText" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gameNameLabel"/>
        <EditText
                android:layout_width="296dp"
                android:layout_height="47dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numberOfPlayersEditText"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/numberOfPlayersLabel"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/numberOfPlayersLabel"
                app:layout_constraintStart_toStartOf="@+id/numberOfPlayersLabel"
                app:layout_constraintHorizontal_bias="0.0"
        />
        <EditText
                android:layout_width="292dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/gamePubEditText"
                app:layout_constraintStart_toStartOf="@+id/gamePubLabel"
                app:layout_constraintEnd_toEndOf="@+id/gamePubLabel"
                app:layout_constraintHorizontal_bias="0.058"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gamePubLabel"
                android:layout_marginStart="8dp"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="36dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/searchLocalizationEditText" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.467"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/localizationTextView"/>
        <TextView
                android:text="@string/type_game_name"
                android:layout_width="157dp"
                android:layout_height="28dp"
                android:id="@+id/gameNameLabel" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/gameNameEditText"
                app:layout_constraintEnd_toEndOf="@+id/gameNameEditText" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="@string/game_pub"
                android:layout_width="163dp"
                android:layout_height="24dp"
                android:id="@+id/gamePubLabel"
                app:layout_constraintStart_toStartOf="@+id/gameTypeRadioGroup"
                app:layout_constraintEnd_toEndOf="@+id/gameTypeRadioGroup" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gameTypeRadioGroup"
        />
        <TextView
                android:text="@string/number_of_players"
                android:layout_width="161dp"
                android:layout_height="32dp"
                android:id="@+id/numberOfPlayersLabel"
                app:layout_constraintEnd_toEndOf="@+id/gameKindCheckBoxes"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gameKindCheckBoxes"
                app:layout_constraintStart_toStartOf="@+id/gameKindCheckBoxes"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="@string/localization"
                android:layout_width="153dp"
                android:layout_height="24dp"
                android:id="@+id/localizationTextView" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/gameNameEditText"
                app:layout_constraintEnd_toEndOf="@+id/gameNameEditText" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/gameNameEditText"/>
        <com.google.android.gms.maps.MapView
                android:layout_width="252dp"
                android:layout_height="191dp"
                android:id="@+id/mapView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/searchLocalizationEdit"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/localizationRadioGroup" android:layout_marginStart="60dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.654"/>
        <RadioGroup
                android:layout_width="208dp"
                android:layout_height="65dp"
                android:id="@+id/localizationRadioGroup"
                app:layout_constraintStart_toStartOf="@+id/searchLocalizationEditText"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchLocalizationEditText">
            <RadioButton
                    android:text="@string/localization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton5" android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/user_profile_localization"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/user_current_localization"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        </RadioGroup>
        <RadioGroup
                android:layout_width="202dp"
                android:layout_height="43dp"
                app:layout_constraintEnd_toEndOf="@+id/mapView"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/mapView"
                app:layout_constraintStart_toStartOf="@+id/mapView" app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/gameTypeRadioGroup">
            <RadioButton
                    android:text="@string/game_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/gameOwnerRadioButton" android:layout_weight="1"/>
            <RadioButton
                    android:text="@string/gather_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/gamePubRadioButton" android:layout_weight="1"/>
        </RadioGroup>

        <TextView
                android:text="@string/game_type"
                android:layout_width="66dp"
                android:layout_height="21dp"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="@+id/gamePubEditText"
                app:layout_constraintTop_toBottomOf="@+id/gamePubEditText" android:layout_marginTop="8dp"/>
        <LinearLayout
                android:layout_width="290dp"
                android:layout_height="150dp"
                android:id="@+id/gameKindCheckBoxes" app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
                android:orientation="vertical">
        </LinearLayout>

        <TextView
                android:id="@+id/gameDateLabel"
                android:layout_width="116dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:text="@string/game_date"
                app:layout_constraintStart_toStartOf="@+id/numberOfPlayersEditText"
                app:layout_constraintTop_toBottomOf="@+id/numberOfPlayersEditText" />

        <TextView
                android:id="@+id/gameDateLabel2"
                android:layout_width="116dp"
                android:layout_height="0dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="@string/game_time"
                app:layout_constraintStart_toEndOf="@+id/gameDateLabel"
                app:layout_constraintTop_toBottomOf="@+id/numberOfPlayersEditText" />

        <EditText
                android:id="@+id/gameTimeEditText"
                android:layout_width="296dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="75dp"
                android:autofillHints="hh:mm"
                android:ems="10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/predictedGameTimeLabel"
                app:layout_constraintTop_toBottomOf="@+id/predictedGameTimeLabel"
                app:layout_constraintVertical_bias="1.0" />

        <Button
                android:id="@+id/addGameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/add_game"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/predictedGameTimeLabel"
                app:layout_constraintVertical_bias="1.0" />

        <TextView
                android:id="@+id/predictedGameTimeLabel"
                android:layout_width="200dp"
                android:layout_height="21dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="84dp"
                android:text="@string/estimated_game_time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameDateLabel" />

        <TextView
                android:id="@+id/addDateTextView"
                android:layout_width="118dp"
                android:layout_height="22dp"
                android:layout_marginStart="58dp"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gameDateLabel" />

        <TextView
                android:id="@+id/addTimeTextView"
                android:layout_width="118dp"
                android:layout_height="22dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/addDateTextView"
                app:layout_constraintTop_toBottomOf="@+id/gameDateLabel2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>