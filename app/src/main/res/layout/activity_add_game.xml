<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.main.AddGameActivity">

    <EditText
            android:layout_width="288dp"
            android:layout_height="22dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gameNameEditText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gameNameLabel"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="22dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/numberOfPlayersEditText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/numberOfPlayersLabel"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/numberOfPlayersLabel"
            app:layout_constraintStart_toStartOf="@+id/numberOfPlayersLabel" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="22dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/gamePubEditText"
            app:layout_constraintStart_toStartOf="@+id/gamePubLabel" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/gamePubLabel"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/gamePubLabel"/>
    <EditText
            android:layout_width="288dp"
            android:layout_height="22dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/localizationEditText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/localizationTextView"/>
    <TextView
            android:text="@string/type_game_name"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:id="@+id/gameNameLabel" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/gameNameEditText"
            app:layout_constraintEnd_toEndOf="@+id/gameNameEditText" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/game_pub"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:id="@+id/gamePubLabel"
            app:layout_constraintStart_toStartOf="@+id/gameTypeRadioGroup"
            app:layout_constraintEnd_toEndOf="@+id/gameTypeRadioGroup" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gameTypeRadioGroup"
    />
    <TextView
            android:text="@string/number_of_players"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:id="@+id/numberOfPlayersLabel"
            app:layout_constraintStart_toStartOf="@+id/gamePubEditText"
            app:layout_constraintEnd_toEndOf="@+id/gamePubEditText" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gamePubEditText"
    />
    <TextView
            android:text="@string/localization"
            android:layout_width="150dp"
            android:layout_height="17dp"
            android:id="@+id/localizationTextView" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/gameNameEditText"
            app:layout_constraintEnd_toEndOf="@+id/gameNameEditText" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/gameNameEditText"/>
    <com.google.android.gms.maps.MapView
            android:layout_width="252dp"
            android:layout_height="191dp"
            android:id="@+id/mapView" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/localizationEditText"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/localizationRadioGroup" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.654"/>
    <RadioGroup
            android:layout_width="184dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="@+id/localizationEditText" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/localizationEditText" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/localizationEditText"
            android:id="@+id/localizationRadioGroup">
        <RadioButton
                android:text="@string/user_profile_localization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/user_current_localization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="194dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toEndOf="@+id/mapView"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mapView"
            app:layout_constraintStart_toStartOf="@+id/mapView" app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/gameTypeRadioGroup">
        <RadioButton
                android:text="@string/game_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/gather_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton4" android:layout_weight="1"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>